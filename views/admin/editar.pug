doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= titulo
    link(rel="stylesheet", href="/css/style.css")
  body
    .contenedor
      .encabezadoTop 
        .encabezadoTexto 
          h2= titulo
      
      form(action=`/evento/${evento.id_Evento}/editar` method="post" class="contenido-login")
        div
          label(for="fechaEvento") Fecha:
          input(type="date", name="fechaEvento", id="fechaEvento", value=evento.fechaEvento, required)
        div
          label(for="horaEvento") Hora:
          input(type="time", name="horaEvento", id="horaEvento", value=evento.horaEvento, required)
        div
          label(for="nombreCliente") Cliente:
          input(type="text", name="nombreCliente", id="nombreCliente", value=evento.nombreCliente, required)
        div
          label(for="telefonoCliente") Teléfono:
          input(type="text", name="telefonoCliente", id="telefonoCliente", value=evento.telefonoCliente, required)
        div
          label(for="nombreVendedora") Vendedora:
          //- Lo dejamos como texto, ya que no permites editarlo aquí
          input(type="text", name="nombreVendedora", id="nombreVendedora", value=evento.nombreVendedora, readonly)
        div
          label(for="codigoVestido") Código de vestido:
          input(type="text", name="codigoVestido", id="codigoVestido", value=evento.codigoVestido)
        div
          label(for="detalles") Detalles:
          textarea(name="detalles", id="detalles")= evento.detalles
        div
          label Estado:
          //- Mostramos el estado actual pero sin posibilidad de editar
          p= evento.status

        button(type="submit") Guardar cambios

      a(href="javascript:history.back()") ← Volver